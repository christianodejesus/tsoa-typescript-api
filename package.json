{
  "name": "tsoa-typescript-api",
  "version": "1.0.0",
  "description": "API basic project with typescript and TSOA",
  "main": "app.js",
  "author": "Christiano Marques",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "yarn tsoa:gen && nodemon --exec ts-node src/app.ts",
    "copy-static-files": "cp ./src/server/swagger.json ./dist/server",
    "build": "rm -Rf dist && yarn tsoa:gen && yarn tsc && yarn copy-static-files",
    "build:start": "yarn build && LOG_LEVEL=info NODE_ENV=development LOG_OUTPUT_FORMAT=JSON node dist/app.js",
    "lint": "yarn eslint './src' './tests' --quiet",
    "lint:fix": "yarn lint --fix",
    "tsoa:gen:docs": "yarn tsoa spec -c ./tsoa.config.js",
    "tsoa:gen:routes": "yarn tsoa routes -c ./tsoa.config.js",
    "tsoa:gen": "yarn tsoa:gen:docs && yarn tsoa:gen:routes",
    "test": "NODE_ENV=test yarn tsoa:gen:routes && yarn jest --colors --detectOpenHandles --logHeapUsage",
    "test:debug": "LOG_LEVEL=debug yarn test",
    "test:info": "LOG_LEVEL=info yarn test",
    "stack:up": "docker compose -f ./docker/docker-compose.yml up -d --renew-anon-volumes",
    "stack:down": "docker compose -f ./docker/docker-compose.yml down --volumes",
    "stack:reload": "yarn stack:down && yarn stack:up",
    "gen:cpf": "node -e \"console.log('CPF:', require('@fnando/cpf').generate(false));\"",
    "gen:uuid": "node -e \"console.log('uuid:', require('uuid').v7());\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@faker-js/faker": "^9.3.0",
    "@fnando/cnpj": "^2.0.0",
    "@fnando/cpf": "^1.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "nock": "^13.5.6",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "axios-retry": "^4.5.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-http-context": "^1.2.4",
    "inversify": "^6.2.1",
    "inversify-binding-decorators": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.12.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "winston-timestamp-colorize": "^1.1.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix"
    ],
    "test/**/*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
